<!DOCTYPE html>
<html>

<head>
    <meta charset='UTF-8'>
    <title>index</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src='/js/bootstrap.min.js'></script>
    <style>
        .content {
            padding: 50px 500px;
        }
        .card{
            margin-top:30px;
        }
        #big_head{
            width:30px;
            height:30px;
        }
    </style>
</head>

<body class='bg-light'>
    <% include layout.ejs %>
    <div class='content'>
        <% for(person of search){ %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <a href='/<%= person.account %>'>
                    <div class='person'>
                        <p>
                            姓名: <%= person.name %>
                        </p>
                        <p>
                            email: <%= person.account %>
                        </p>
                        <a class='btn btn-primary' href="/account/add_person/<%= person.account %>">新增好友</a>
                    </div>
                </a>
            </div>
        </div>
        <% } %>
</body>